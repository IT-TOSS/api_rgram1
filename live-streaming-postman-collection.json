  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:3000",
      "type": "string"
    },
    {
      "key": "user_id",
      "value": "68ad40ebfe4335deca03666d",
      "type": "string"
    },
    {
      "key": "viewer_id",
      "value": "viewer_user_id_here",
      "type": "string"
    },
