  ],
  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Auto-update stream_id variable after starting a stream",
          "if (pm.info.requestName === 'Start Live Stream') {",
          "    console.log('Starting live stream...');",
          "}",
          "",
          "// Auto-update user_id and viewer_id if needed",
          "if (!pm.collectionVariables.get('user_id')) {",
          "    pm.collectionVariables.set('user_id', '68ad40ebfe4335deca03666d');",
          "}",
          "if (!pm.collectionVariables.get('viewer_id')) {",
          "    pm.collectionVariables.set('viewer_id', 'viewer_user_id_here');",
          "}"
        ]
      }
    },
    {
      "listen": "test",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Auto-extract stream_id from Start Stream response",
          "if (pm.info.requestName === 'Start Live Stream' && pm.response.code === 200) {",
          "    const response = pm.response.json();",
          "    if (response.success && response.data && response.data.streamId) {",
          "        pm.collectionVariables.set('stream_id', response.data.streamId);",
          "        console.log('Stream ID updated:', response.data.streamId);",
          "    }",
          "}",
          "",
          "// Test response structure",
          "pm.test('Response is successful', function () {",
          "    pm.response.to.have.status(200);",
          "});",
          "",
          "pm.test('Response has success field', function () {",
          "    const response = pm.response.json();",
          "    pm.expect(response).to.have.property('success');",
          "});",
          "",
          "pm.test('Response has message field', function () {",
          "    const response = pm.response.json();",
          "    pm.expect(response).to.have.property('message');",
          "});",
          "",
          "// Log response for debugging",
          "console.log('Response:', pm.response.json());"
        ]
      }
    }
  ]
}
