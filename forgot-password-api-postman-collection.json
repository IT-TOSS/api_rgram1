{
  "info": {
    "name": "Forgot Password API Collection",
    "description": "Collection for testing the forgot password functionality",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Forgot Password",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"user@example.com\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/auth/forgot-password",
          "host": ["{{base_url}}"],
          "path": ["api", "auth", "forgot-password"]
        },
        "description": "Request a password reset link to be sent to the user's email"
      },
      "response": []
    },
    {
      "name": "Validate Reset Token",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"token\": \"your-reset-token-here\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/auth/validate-reset-token",
          "host": ["{{base_url}}"],
          "path": ["api", "auth", "validate-reset-token"]
        },
        "description": "Validate a password reset token before allowing password reset"
      },
      "response": []
    },
    {
      "name": "Reset Password",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"token\": \"your-reset-token-here\",\n  \"newPassword\": \"NewPassword123!\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/auth/reset-password",
          "host": ["{{base_url}}"],
          "path": ["api", "auth", "reset-password"]
        },
        "description": "Reset the user's password using a valid reset token"
      },
      "response": []
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:3000",
      "type": "string"
    }
  ],
  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Pre-request script for forgot password APIs",
          "console.log('Testing Forgot Password API:', pm.request.url);"
        ]
      }
    },
    {
      "listen": "test",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Test script for forgot password APIs",
          "pm.test('Response status is 200 or 400', function () {",
          "    pm.expect(pm.response.code).to.be.oneOf([200, 400]);",
          "});",
          "",
          "pm.test('Response has success property', function () {",
          "    const response = pm.response.json();",
          "    pm.expect(response).to.have.property('success');",
          "});",
          "",
          "pm.test('Response has message property', function () {",
          "    const response = pm.response.json();",
          "    pm.expect(response).to.have.property('message');",
          "});"
        ]
      }
    }
  ]
}
