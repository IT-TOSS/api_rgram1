  "item": [
    {
      "name": "üé• Stream Management",
      "item": [
        {
          "name": "Start Live Stream",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"userId\": \"{{user_id}}\",\n  \"title\": \"Gaming Live Stream\",\n  \"description\": \"Playing my favorite game live!\",\n  \"isPrivate\": false,\n  \"allowedViewers\": [],\n  \"category\": \"gaming\",\n  \"tags\": [\"gaming\", \"live\", \"fun\"],\n  \"location\": \"New York\",\n  \"settings\": {\n    \"quality\": \"720p\",\n    \"enableChat\": true,\n    \"enableLikes\": true,\n    \"enableComments\": true,\n    \"enableScreenShare\": false,\n    \"maxViewers\": 1000\n  }\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/live/start",
              "host": ["{{base_url}}"],
              "path": ["api", "live", "start"]
            }
          }
        },
        {
          "name": "Go Live",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"streamId\": \"{{stream_id}}\",\n  \"userId\": \"{{user_id}}\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/live/go-live",
              "host": ["{{base_url}}"],
              "path": ["api", "live", "go-live"]
            }
          }
        },
        {
          "name": "End Stream",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"streamId\": \"{{stream_id}}\",\n  \"userId\": \"{{user_id}}\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/live/end",
              "host": ["{{base_url}}"],
              "path": ["api", "live", "end"]
            }
          }
        }
      ]
    },
    {
      "name": "üë• Viewer Management",
      "item": [
